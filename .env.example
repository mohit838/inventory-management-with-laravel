APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------------
# DOCKER CONFIGURATION
# -----------------------------
# External port exposed on host machine
DOCKER_APP_PORT_EXTERNAL=4002
# Internal port inside container (should match Dockerfile EXPOSE)
DOCKER_APP_PORT_INTERNAL=4002

# External MySQL port (when MySQL runs outside app container)
DOCKER_MYSQL_PORT_EXTERNAL=3306
# External Redis port (when Redis runs outside app container)
DOCKER_REDIS_PORT_EXTERNAL=6379

# Image name override (used in docker-compose.yml)
# APP_IMAGE=inventory-management:latest

# -----------------------------
# DATABASE CONFIGURATION
# -----------------------------
DB_CONNECTION=mysql
# Use 'host.docker.internal' when connecting to services on host from Docker
# Use '127.0.0.1' for local non-Docker development
DB_HOST=host.docker.internal
DB_PORT=3306
DB_DATABASE=inv_db
DB_USERNAME=root
DB_PASSWORD=

# MySQL container initialization (if running MySQL in Docker)
MYSQL_DATABASE=inv_db
MYSQL_USER=inv_user
MYSQL_PASSWORD=
MYSQL_ROOT_PASSWORD=

# -----------------------------
# SESSION CONFIGURATION
# -----------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# -----------------------------
# CACHE & QUEUE
# -----------------------------
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=redis
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# -----------------------------
# REDIS CONFIGURATION
# -----------------------------
REDIS_CLIENT=phpredis
# Use 'host.docker.internal' when connecting to Redis on host from Docker
# Use '127.0.0.1' for local non-Docker development
REDIS_HOST=host.docker.internal
REDIS_PASSWORD=null
REDIS_PORT=6379

# -----------------------------
# MAIL CONFIGURATION
# -----------------------------
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------
# MINIO / S3 STORAGE
# -----------------------------
MINIO_ENDPOINT=
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET_PRIVATE=
MINIO_BUCKET_PUBLIC=
MINIO_REGION=us-east-1