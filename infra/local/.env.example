APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=inv_db
DB_USERNAME=inv_user
DB_PASSWORD=inv_password

# MySQL Container Configuration
MYSQL_DATABASE=inv_db
MYSQL_USER=inv_user
MYSQL_PASSWORD=inv_password
MYSQL_ROOT_PASSWORD=root_password

# Docker Port Configuration
DOCKER_MYSQL_PORT_EXTERNAL=1234
DOCKER_REDIS_PORT_EXTERNAL=1235
DOCKER_APP_PORT_EXTERNAL=1236
DOCKER_APP_PORT_INTERNAL=4002

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=mypassword
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# MinIO Configuration (S3 Compatible Storage)
MINIO_ENDPOINT=https://s3.example.com
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_BUCKET_PRIVATE=private-assets
MINIO_BUCKET_PUBLIC=public-assets
MINIO_REGION=us-east-1
