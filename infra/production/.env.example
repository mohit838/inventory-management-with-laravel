APP_NAME="Inventory Management"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=inv_db_prod
DB_USERNAME=inv_user_prod
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# MySQL Container Configuration
MYSQL_DATABASE=inv_db_prod
MYSQL_USER=inv_user_prod
MYSQL_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MYSQL_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD

# Docker Port Configuration
DOCKER_MYSQL_PORT_EXTERNAL=3306
DOCKER_REDIS_PORT_EXTERNAL=6379
DOCKER_APP_PORT_EXTERNAL=8000
DOCKER_APP_PORT_INTERNAL=4002

# App Image (set by CI/CD)
APP_IMAGE=inventory-management:latest

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=minio
QUEUE_CONNECTION=database

CACHE_STORE=redis

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-username
MAIL_PASSWORD=your-password
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# MinIO Configuration (S3 Compatible Storage)
MINIO_ENDPOINT=https://s3.yourdomain.com
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=CHANGE_ME_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_ME_SECRET_KEY
MINIO_BUCKET_PRIVATE=private-assets
MINIO_BUCKET_PUBLIC=public-assets
MINIO_REGION=us-east-1
